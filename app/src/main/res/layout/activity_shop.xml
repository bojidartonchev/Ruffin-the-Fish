<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fishels.soft.fishels.ruffinthefish.Core.Activities.Shop"
    android:background="@drawable/backgroundshop"
    tools:ignore="MergeRootFrame">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-10dp">

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:id="@+id/watchAdd_btn"
            android:background="#00cb1a1a"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shardText"
            android:text="321"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coinImg"
            android:background="@drawable/shard"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/shardText"
            android:layout_toStartOf="@+id/shardText" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shield_img"
            android:background="@drawable/shield"
            android:layout_below="@+id/coinImg"
            android:layout_alignParentStart="false"
            android:layout_toLeftOf="@+id/whirpool_img"
            android:contentDescription="" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whirpool_img"
            android:layout_alignTop="@+id/shield_img"
            android:background="@drawable/teeth"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiScore_img"
            android:background="@drawable/boots"
            android:layout_alignTop="@+id/whirpool_img"
            android:layout_toRightOf="@+id/whirpool_img" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buy_btn"
            android:background="@drawable/buybtn"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/watchAdd_btn"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/info_txt"
            android:textSize="20dp"
            android:shadowColor="#5e4e4e"
            android:layout_alignLeft="@+id/shield_img"
            android:layout_alignStart="@+id/shield_img"
            android:layout_below="@+id/shield_img"
            android:layout_alignRight="@+id/multiScore_img"
            android:layout_alignEnd="@+id/multiScore_img"
            android:textColor="#b4ceae" />

    </RelativeLayout>
</RelativeLayout>