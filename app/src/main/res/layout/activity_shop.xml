<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fishels.soft.fishels.ruffinthefish.Core.Activities.Shop"
    android:background="@drawable/menubackground"
    tools:ignore="MergeRootFrame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scroll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-10dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/watchAdd_btn"
            android:layout_marginBottom="48dp"
            android:background="#cb1a1a"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 :"
            android:id="@+id/textView4"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@drawable/shard"
            android:layout_below="@+id/shield_img"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* "
            android:id="@+id/textView6"
            android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/shield_img"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shield_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="67dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frenzy_img"
            android:layout_alignTop="@+id/shield_img"
            android:layout_toRightOf="@+id/shield_img"
            android:layout_toEndOf="@+id/shield_img" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_btn"
            android:layout_alignTop="@+id/frenzy_img"
            android:layout_toRightOf="@+id/frenzy_img"
            android:layout_toEndOf="@+id/frenzy_img" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buy_btn"
            android:background="#160d0d"
            android:layout_alignBottom="@+id/watchAdd_btn"
            android:layout_toRightOf="@+id/shield_img"
            android:layout_toEndOf="@+id/shield_img"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>