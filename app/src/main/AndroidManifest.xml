<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fishels.ruffinthefish">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="fishels.soft.fishels.ruffinthefish.Core.Activities.Game"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="fishels.soft.fishels.ruffinthefish.Core.Activities.Splash"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="fishels.soft.fishels.ruffinthefish.Core.Activities.Menu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHERS" />
            </intent-filter>
        </activity>

        <activity
            android:name="fishels.soft.fishels.ruffinthefish.Core.Activities.Settings"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHERS" />
            </intent-filter>
        </activity>

        <activity
            android:name="fishels.soft.fishels.ruffinthefish.Core.Activities.Achievements"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHERS" />
            </intent-filter>
        </activity>
    </application>

</manifest>
